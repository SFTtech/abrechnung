{
    "name": "api",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/api/src",
    "projectType": "library",
    "tags": [],
    "targets": {
        "generate-openapi": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "npx typed-openapi --schemas-only --runtime zod ../../api/openapi.json --output src/lib/generated/schema.ts",
                    "npx openapi-typescript-codegen --input ../../api/openapi.json --output src/lib/generated --useUnionTypes --name Client --useOptions",
                    "sed -i 's/z.record(/z.record(z.string(), /' src/lib/generated/schema.ts",
                    "sed -i 's/type: string/type: \"personal\"/' src/lib/generated/models/PersonalAccount.ts",
                    "sed -i 's/type: string/type: \"clearing\"/' src/lib/generated/models/ClearingAccount.ts",
                    "grep -rlZ eslint-disable src/lib/generated | xargs -0 sed -i 's/eslint-disable/oxlint-disable/' ",
                    "echo \"/* oxlint-disable */\\n$(cat src/lib/generated/schema.ts)\" > src/lib/generated/schema.ts",
                    "echo \"/* tslint:disable */\\n$(cat src/lib/generated/schema.ts)\" > src/lib/generated/schema.ts",
                    "echo \"/* istanbul ignore file */\\n$(cat src/lib/generated/schema.ts)\" > src/lib/generated/schema.ts",
                    "npx oxfmt src/lib/generated"
                ],
                "parallel": false,
                "cwd": "libs/api"
            }
        }
    }
}
